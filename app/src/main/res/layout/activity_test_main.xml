<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/realmain_back"
    tools:context=".TestMainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="270dp"
            android:layout_height="100dp"
            android:src="@drawable/final_logo_white"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/binggraemelona"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:text="ウェイスタンドは"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggraemelona"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:text="ML基盤のKNN分類アルゴリズムを"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggraemelona"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:text="通じて、着席姿勢を分析し"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggraemelona"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:text="正しい姿勢習慣を作ります"
            />


        <Button
            android:id="@+id/moveSignUpButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:textColor="@color/colorGreen"
            android:text="SIGN UP"
            android:background="@drawable/signupbutton_background"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/binggraemelona"
            android:text="もうアカウントがありますか？"/>
        <TextView
            android:id="@+id/moveLoginButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/binggraemelona"
            android:text="lOG IN"

            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>